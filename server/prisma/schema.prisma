generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id        Int      @id @default(autoincrement())
    username  String   @unique
    email     String   @unique
    avatar    String?
    password  String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    // relations
    messagesSent     Message[] @relation(name: "messagesSent")
    messagesReceived Message[] @relation(name: "messagesReceived")
    roomsCreated     Room[]    @relation(name: "owner")
    roomsJoined      Room[]    @relation(name: "joined")
}

model Room {
    id        Int      @id @default(autoincrement())
    name      String   @unique
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    // relations
    onwerId      Int
    owner        User   @relation(name: "owner", fields: [onwerId], references: [id])
    participants User[] @relation(name: "joined")
}

model Message {
    id        Int      @id @default(autoincrement())
    text      String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    // relations
    senderId   Int
    sender     User @relation(name: "messagesSent", fields: [senderId], references: [id])
    receiverId Int
    receiver   User @relation(name: "messagesReceived", fields: [receiverId], references: [id])
}
